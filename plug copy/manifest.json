{
  "manifest_version": 2,
  "name": "手柄与漫画插件",
  "version": "2.0.2",
  "description": "手柄与漫画插件专用",
  "icons": {
    "96": "icons/icon-96x96.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "runtime",
    "activeTab",
    "windows",
    "scripting",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "declarativeNetRequest",
    "cookies",
    "storage",
    "downloads",
    "background",
    "<all_urls>",
    "notifications",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "run-foo": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description":"打开手柄与漫画阅读器"
    }
  }
}
